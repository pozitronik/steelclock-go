{
  "$schema": "schema/config.schema.json",
  "config_name": "Network Monitor",
  "refresh_rate_ms": 1000,
  "display": {
    "width": 128,
    "height": 40,
    "background": 0
  },
  "widgets": [
    {
      "type": "network",
      "enabled": true,
      "position": {"x": 0, "y": 0, "w": 128, "h": 40, "z": 0},
      "style": {"background": 0, "border": -1, "padding": 0},
      "mode": "text",
      "interface": null,
      "unit": "auto",
      "max_speed_mbps": -1,
      "bar": {
        "direction": "horizontal",
        "border": false,
        "colors": {
          "rx": 255,
          "tx": 128
        }
      },
      "graph": {
        "history": 60,
        "colors": {
          "rx": 255,
          "tx": 128
        }
      },
      "gauge": {
        "colors": {
          "rx": 255,
          "tx": 128,
          "rx_needle": 255,
          "tx_needle": 255,
          "ticks": 200
        }
      },
      "text": {
        "format": "RX: %s TX: %s",
        "font": "pixel5x7",
        "show_unit": true,
        "size": 16,
        "align": {"h": "center", "v": "center"}
      },
      "update_interval": 0.2
    }
  ]
}
