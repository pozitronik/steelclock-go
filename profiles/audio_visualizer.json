{
  "$schema": "schema/config.schema.json",
  "config_name": "Audio Visualizer",
  "refresh_rate_ms": 33,
  "display": {
    "width": 128,
    "height": 40,
    "background": 0
  },
  "widgets": [
    {
      "type": "audio_visualizer",
      "enabled": true,
      "position": {
        "x": 0,
        "y": 0,
        "w": 128,
        "h": 40,
        "z": 0
      },
      "style": {
        "background": 0,
        "border": -1,
        "padding": 0
      },
      "mode": "spectrum",
      "spectrum": {
        "bars": 32,
        "scale": "logarithmic",
        "style": "bars",
        "smoothing": 0.7,
        "frequency_compensation": true,
        "dynamic_scaling": {
          "strength": 1.0,
          "window": 0.5
        },
        "peak": {
          "enabled": true,
          "hold_time": 1.0
        },
        "colors": {
          "fill": 255,
          "left": 255,
          "right": 200
        }
      },
      "oscilloscope": {
        "style": "line",
        "samples": 128,
        "colors": {
          "fill": 255,
          "left": 255,
          "right": 200
        }
      },
      "channel": "stereo_combined",
      "error_threshold": 30,
      "auto_hide": {
        "enabled": false,
        "timeout": 2.0,
        "on_silence": false,
        "silence_time": 2.0
      },
      "update_interval": 0.033
    }
  ]
}
