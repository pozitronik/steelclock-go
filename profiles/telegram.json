{
  "$schema": "schema/config.schema.json",
  "config_name": "Telegram Notifications",
  "backend": "direct",
  "refresh_rate_ms": 100,
  "display": {
    "width": 128,
    "height": 40,
    "background": 0
  },
  "widgets": [
    {
      "type": "telegram",
      "position": {
        "x": 0,
        "y": 0,
        "w": 128,
        "h": 40
      },
      "style": {
        "border": -1,
        "background": 0
      },
      "update_interval": 1.0,
      "telegram": {
        "auth": {
          "api_id": 12345678,
          "api_hash": "your_api_hash_here",
          "phone_number": "+1234567890"
        },
        "session_path": "",
        "poll_interval": 1.0,

        "private_chats": {
          "enabled": true,
          "whitelist": [],
          "blacklist": [],
          "show_pinned_messages": true,
          "appearance": {
            "header": {
              "enabled": true,
              "blink": false,
              "text": {
                "font": "5x7",
                "size": 1,
                "align": { "h": "left", "v": "top" }
              },
              "scroll": {
                "enabled": false,
                "direction": "left",
                "speed": 30,
                "mode": "continuous",
                "gap": 20
              }
            },
            "message": {
              "enabled": true,
              "blink": false,
              "text": {
                "font": "5x7",
                "size": 16,
                "align": { "h": "left", "v": "top" }
              },
              "scroll": {
                "enabled": true,
                "direction": "left",
                "speed": 30,
                "mode": "continuous",
                "gap": 1
              },
              "word_break": "break-all"
            },
            "separator": {
              "color": 255,
              "thickness": 0
            },
            "timeout": 10,
            "transitions": {
              "in": "random",
              "in_speed": 0.5,
              "out": "random",
              "out_speed": 0.5
            }
          }
        },

        "groups": {
          "enabled": false,
          "whitelist": [],
          "blacklist": [],
          "show_pinned_messages": true,
          "appearance": {
            "header": {
              "enabled": true,
              "blink": false,
              "text": {
                "font": null,
                "size": 16,
                "align": { "h": "left", "v": "top" }
              },
              "scroll": {
                "enabled": true,
                "direction": "left",
                "speed": 30,
                "mode": "continuous",
                "gap": 20
              }
            },
            "message": {
              "enabled": true,
              "blink": false,
              "text": {
                "font": null,
                "size": 16,
                "align": { "h": "left", "v": "top" }
              },
              "scroll": {
                "enabled": true,
                "direction": "left",
                "speed": 30,
                "mode": "continuous",
                "gap": 20
              }
            },
            "separator": {
              "color": 128,
              "thickness": 1
            },
            "timeout": 0,
            "transitions": {
              "in": "none",
              "in_speed": 0.5,
              "out": "none",
              "out_speed": 0.5
            }
          }
        },

        "channels": {
          "enabled": false,
          "whitelist": [],
          "blacklist": [],
          "show_pinned_messages": false,
          "appearance": {
            "header": {
              "enabled": true,
              "blink": false,
              "text": {
                "font": null,
                "size": 16,
                "align": { "h": "left", "v": "top" }
              },
              "scroll": {
                "enabled": true,
                "direction": "left",
                "speed": 30,
                "mode": "continuous",
                "gap": 20
              }
            },
            "message": {
              "enabled": true,
              "blink": false,
              "text": {
                "font": null,
                "size": 16,
                "align": { "h": "left", "v": "top" }
              },
              "scroll": {
                "enabled": true,
                "direction": "left",
                "speed": 30,
                "mode": "continuous",
                "gap": 20
              }
            },
            "separator": {
              "color": 128,
              "thickness": 1
            },
            "timeout": 0,
            "transitions": {
              "in": "none",
              "in_speed": 0.5,
              "out": "none",
              "out_speed": 0.5
            }
          }
        }
      }
    }
  ]
}
