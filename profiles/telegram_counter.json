{
  "$schema": "schema/config.schema.json",
  "config_name": "Telegram Counter",
  "backend": "direct",
  "refresh_rate_ms": 100,
  "display": {
    "width": 128,
    "height": 40,
    "background": 0
  },
  "widgets": [
    {
      "type": "telegram_counter",
      "position": {
        "x": 0,
        "y": 0,
        "w": 128,
        "h": 40
      },
      "style": {
        "border": -1,
        "background": 0
      },
      "update_interval": 1.0,
      "telegram": {
        "auth": {
          "api_id": 12345678,
          "api_hash": "your_api_hash_here",
          "phone_number": "+1234567890"
        },
        "counter": {
          "format": "text",
          "show_zero": false,
          "blink": "nonzero",
          "text": {
            "font": "3x5",
            "size": 1
          }
        }
      }
    }
  ]
}
