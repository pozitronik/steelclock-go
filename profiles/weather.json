{
  "$schema": "schema/config.schema.json",
  "config_name": "Weather",
  "refresh_rate_ms": 1000,
  "display": {
    "width": 128,
    "height": 40,
    "background": 0
  },
  "widgets": [
    {
      "type": "weather",
      "enabled": true,
      "position": {"x": 0, "y": 0, "w": 128, "h": 40, "z": 0},
      "style": {"background": 0, "border": -1, "padding": 0},
      "mode": "icon",
      "text": {
        "font": null,
        "size": 16,
        "align": {"h": "center", "v": "center"}
      },
      "weather": {
        "provider": "open-meteo",
        "location": {
          "lat": 51.5074,
          "lon": -0.1278
        },
        "units": "metric",
        "show_icon": true,
        "icon_size": 16
      },
      "update_interval": 300
    }
  ]
}
