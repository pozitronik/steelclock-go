{
  "$schema": "schema/config.schema.json",
  "config_name": "CPU Monitor",
  "refresh_rate_ms": 1000,
  "display": {
    "width": 128,
    "height": 40,
    "background": 0
  },
  "widgets": [
    {
      "type": "cpu",
      "enabled": true,
      "position": {"x": 0, "y": 0, "w": 128, "h": 40, "z": 0},
      "style": {"background": 0, "border": -1, "padding": 2},
      "mode": "gauge",
      "bar": {
        "direction": "horizontal",
        "border": false,
        "colors": {
          "fill": 255
        }
      },
      "graph": {
        "history": 60,
        "filled": true,
        "colors": {
          "fill": 255
        }
      },
      "gauge": {
        "show_ticks": true,
        "colors": {
          "fill": 255,
          "arc": 200,
          "needle": 255,
          "ticks": 150
        }
      },
      "per_core": {
        "enabled": false,
        "margin": 0,
        "border": false
      },
      "text": {
        "format": "%d%%",
        "font": null,
        "size": 10,
        "align": {"h": "center", "v": "center"}
      },
      "update_interval": 1.0
    }
  ]
}
