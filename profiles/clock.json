{
  "$schema": "schema/config.schema.json",
  "config_name": "Clock",
  "refresh_rate_ms": 1000,
  "display": {
    "width": 128,
    "height": 40,
    "background": 0
  },
  "widgets": [
    {
      "type": "clock",
      "enabled": true,
      "position": {"x": 0, "y": 0, "w": 128, "h": 40, "z": 0},
      "style": {"background": 0, "border": -1, "padding": 2},
      "mode": "text",
      "text": {
        "format": "%H:%M:%S",
        "font": null,
        "size": 16,
        "align": {"h": "center", "v": "center"}
      },
      "analog": {
        "show_seconds": true,
        "show_ticks": true,
        "colors": {
          "face": 255,
          "hour": 255,
          "minute": 255,
          "second": 255,
          "ticks": 150
        }
      },
      "update_interval": 0.1
    }
  ]
}
