{
  "$schema": "schema/config.schema.json",
  "config_name": "Volume",
  "refresh_rate_ms": 100,
  "display": {
    "width": 128,
    "height": 40,
    "background": 0
  },
  "widgets": [
    {
      "type": "volume",
      "enabled": true,
      "position": {"x": 0, "y": 0, "w": 128, "h": 40, "z": 0},
      "style": {"background": 0, "border": -1, "padding": 2},
      "mode": "triangle",
      "bar": {
        "direction": "horizontal",
        "border": false,
        "colors": {
          "fill": 255
        }
      },
      "gauge": {
        "show_ticks": true,
        "colors": {
          "arc": 200,
          "needle": 255,
          "ticks": 150
        }
      },
      "triangle": {
        "border": true,
        "colors": {
          "fill": 255
        }
      },
      "text": {
        "format": "%d%%",
        "font": null,
        "size": 10,
        "align": {"h": "center", "v": "center"}
      },
      "auto_hide": {
        "enabled": true,
        "timeout": 3.0
      },
      "update_interval": 0.1,
      "poll_interval": 0.1
    }
  ]
}
