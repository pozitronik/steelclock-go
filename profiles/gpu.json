{
  "$schema": "schema/config.schema.json",
  "config_name": "GPU Monitor",
  "refresh_rate_ms": 1000,
  "display": {
    "width": 128,
    "height": 40,
    "background": 0
  },
  "widgets": [
    {
      "type": "gpu",
      "enabled": true,
      "position": {
        "x": 0,
        "y": 0,
        "w": 128,
        "h": 40,
        "z": 0
      },
      "style": {
        "background": 0,
        "border": -1,
        "padding": 0
      },
      "mode": "graph",
      "gpu": {
        "adapter": 0,
        "metric": "utilization_3d"
      },
      "bar": {
        "direction": "horizontal",
        "border": false,
        "colors": {
          "fill": 255
        }
      },
      "graph": {
        "history": 128,
        "colors": {
          "fill": 255,
          "line": 255
        }
      },
      "gauge": {
        "show_ticks": true,
        "colors": {
          "fill": 255,
          "arc": 200,
          "needle": 255,
          "ticks": 150
        }
      },
      "text": {
        "format": "%d%%",
        "font": null,
        "size": 10,
        "align": {
          "h": "center",
          "v": "center"
        }
      },
      "update_interval": 0.5
    }
  ]
}
