{
  "$schema": "schema/config.schema.json",
  "config_name": "Disk I/O",
  "refresh_rate_ms": 1000,
  "display": {
    "width": 128,
    "height": 40,
    "background": 0
  },
  "widgets": [
    {
      "type": "disk",
      "enabled": true,
      "position": {"x": 0, "y": 0, "w": 128, "h": 40, "z": 0},
      "style": {"background": 0, "border": -1, "padding": 0},
      "mode": "text",
      "disk": null,
      "max_speed_mbps": -1,
      "unit": "MiB/s",
      "bar": {
        "direction": "horizontal",
        "border": false,
        "colors": {
          "read": 255,
          "write": 120
        }
      },
      "graph": {
        "history": 60,
        "filled": true,
        "colors": {
          "read": 255,
          "write": 0
        }
      },
      "text": {
        "format": "R: %s W: %s",
        "show_unit": true,
        "font": "pixel5x7",
        "size": 16,
        "align": {"h": "center", "v": "center"}
      },
      "update_interval": 1.0
    }
  ]
}
