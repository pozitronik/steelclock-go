{
  "$schema": "../config.schema.json",
  "schema_version": 2,
  "game_name": "STEELCLOCK_AUDIO",
  "game_display_name": "SteelClock - Audio Visualizer",
  "refresh_rate_ms": 33,
  "display": {
    "width": 128,
    "height": 40,
    "background": 0
  },
  "widgets": [
    {
      "type": "audio_visualizer",
      "id": "spectrum_analyzer",
      "enabled": true,
      "position": {"x": 0, "y": 0, "w": 128, "h": 40, "z": 0},
      "style": {"background": 0, "border": -1},
      "mode": "spectrum",
      "spectrum": {
        "bars": 32,
        "scale": "logarithmic",
        "style": "bars",
        "smoothing": 0.7,
        "frequency_compensation": true,
        "dynamic_scaling": {
          "strength": 1.0,
          "window": 0.5
        },
        "colors": {
          "fill": 255
        }
      },
      "peak": {
        "enabled": true,
        "hold_time": 1.0
      },
      "channel": "stereo_combined",
      "update_interval": 0.033
    },
    {
      "type": "audio_visualizer",
      "id": "oscilloscope",
      "enabled": false,
      "position": {"x": 0, "y": 0, "w": 128, "h": 40, "z": 0},
      "style": {"background": 0, "border": -1},
      "mode": "oscilloscope",
      "oscilloscope": {
        "style": "line",
        "samples": 128,
        "colors": {
          "fill": 255,
          "left": 255,
          "right": 200
        }
      },
      "channel": "stereo_separated",
      "update_interval": 0.033
    }
  ]
}
