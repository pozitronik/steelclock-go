{
  "$schema": "../config.schema.json",
  "schema_version": 2,
  "game_name": "STEELCLOCK_CPU",
  "game_display_name": "SteelClock - CPU Monitor",
  "refresh_rate_ms": 1000,
  "display": {
    "width": 128,
    "height": 40,
    "background": 0
  },
  "widgets": [
    {
      "type": "cpu",
      "enabled": true,
      "position": {"x": 0, "y": 0, "w": 128, "h": 40, "z": 0},
      "style": {"background": 0, "border": -1, "padding": 2},
      "mode": "gauge",
      "gauge": {
        "show_ticks": true,
        "colors": {
          "arc": 200,
          "needle": 255
        }
      },
      "per_core": {
        "enabled": false
      },
      "text": {
        "align": {"h": "center", "v": "center"}
      },
      "update_interval": 1.0
    }
  ]
}
