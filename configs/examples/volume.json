{
  "$schema": "../config.schema.json",
  "game_name": "STEELCLOCK_VOLUME",
  "game_display_name": "SteelClock - Volume Indicator",
  "refresh_rate_ms": 100,
  "display": {
    "width": 128,
    "height": 40,
    "background_color": 0
  },
  "layout": {
    "type": "basic"
  },
  "widgets": [
    {
      "type": "volume",
      "id": "volume_triangle",
      "enabled": true,
      "position": {
        "x": 0,
        "y": 0,
        "w": 128,
        "h": 40,
        "z_order": 0
      },
      "style": {
        "background_color": 0,
        "background_opacity": 255,
        "border": false,
        "border_color": 255
      },
      "properties": {
        "display_mode": "triangle",
        "update_interval": 0.1,
        "triangle_fill_color": 255,
        "triangle_border": true,
        "horizontal_align": "center",
        "vertical_align": "center",
        "padding": 2,
        "auto_hide": true,
        "auto_hide_timeout": 3.0
      }
    }
  ]
}
