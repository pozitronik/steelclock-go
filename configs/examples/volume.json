{
  "$schema": "../config.schema.json",
  "schema_version": 2,
  "game_name": "STEELCLOCK_VOLUME",
  "game_display_name": "SteelClock - Volume Indicator",
  "refresh_rate_ms": 100,
  "display": {
    "width": 128,
    "height": 40,
    "background": 0
  },
  "widgets": [
    {
      "type": "volume",
      "enabled": true,
      "position": {"x": 0, "y": 0, "w": 128, "h": 40, "z": 0},
      "style": {"background": 0, "border": -1, "padding": 2},
      "mode": "triangle",
      "triangle": {
        "border": true,
        "colors": {
          "fill": 255
        }
      },
      "text": {
        "align": {"h": "center", "v": "center"}
      },
      "auto_hide": {
        "enabled": true,
        "timeout": 3.0
      },
      "update_interval": 0.1
    }
  ]
}
