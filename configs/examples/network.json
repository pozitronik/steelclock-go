{
  "$schema": "../config.schema.json",
  "schema_version": 2,
  "game_name": "STEELCLOCK_NETWORK",
  "game_display_name": "SteelClock - Network Monitor",
  "refresh_rate_ms": 1000,
  "display": {
    "width": 128,
    "height": 40,
    "background": 0
  },
  "widgets": [
    {
      "type": "network",
      "enabled": true,
      "position": {"x": 0, "y": 0, "w": 128, "h": 40, "z": 0},
      "style": {"background": 0, "border": -1, "padding": 2},
      "mode": "gauge",
      "interface": null,
      "max_speed_mbps": 100.0,
      "gauge": {
        "show_ticks": true,
        "colors": {
          "rx": 255,
          "tx": 128,
          "rx_needle": 255,
          "tx_needle": 200
        }
      },
      "text": {
        "align": {"h": "center", "v": "center"}
      },
      "update_interval": 1.0
    }
  ]
}
