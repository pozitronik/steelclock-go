{
  "$schema": "../config.schema.json",
  "schema_version": 2,
  "game_name": "STEELCLOCK_DISK",
  "game_display_name": "SteelClock - Disk Monitor",
  "refresh_rate_ms": 1000,
  "display": {
    "width": 128,
    "height": 40,
    "background": 0
  },
  "widgets": [
    {
      "type": "disk",
      "id": "disk_graph",
      "enabled": true,
      "position": {"x": 0, "y": 0, "w": 128, "h": 40, "z": 0},
      "style": {"background": 0, "border": 255, "padding": 2},
      "mode": "graph",
      "disk": null,
      "max_speed_mbps": -1,
      "graph": {
        "history": 60,
        "filled": true,
        "colors": {
          "read": 255,
          "write": 200
        }
      },
      "text": {
        "align": {"h": "center", "v": "center"}
      },
      "update_interval": 1.0
    }
  ]
}
