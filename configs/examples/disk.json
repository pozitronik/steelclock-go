{
  "$schema": "../config.schema.json",
  "game_name": "STEELCLOCK_DISK",
  "game_display_name": "SteelClock - Disk Monitor",
  "refresh_rate_ms": 1000,
  "display": {
    "width": 128,
    "height": 40,
    "background_color": 0
  },
  "layout": {
    "type": "basic"
  },
  "widgets": [
    {
      "type": "disk",
      "id": "disk_graph",
      "enabled": true,
      "position": {
        "x": 0,
        "y": 0,
        "w": 128,
        "h": 40,
        "z_order": 0
      },
      "style": {
        "background_color": 0,
        "border": true,
        "border_color": 255
      },
      "properties": {
        "disk_name": null,
        "display_mode": "graph",
        "update_interval": 1.0,
        "history_length": 60,
        "max_speed_mbps": -1,
        "read_color": 255,
        "write_color": 200,
        "horizontal_align": "center",
        "vertical_align": "center",
        "padding": 2
      }
    }
  ]
}
