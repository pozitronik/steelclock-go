{
  "$schema": "../config.schema.json",
  "game_name": "STEELCLOCK_CLOCK",
  "game_display_name": "SteelClock - Digital Clock",
  "refresh_rate_ms": 1000,
  "display": {
    "width": 128,
    "height": 40,
    "background_color": 0
  },
  "layout": {
    "type": "basic"
  },
  "widgets": [
    {
      "type": "clock",
      "id": "digital_clock",
      "enabled": true,
      "position": {
        "x": 0,
        "y": 0,
        "w": 128,
        "h": 40,
        "z_order": 0
      },
      "style": {
        "background_color": 0,
        "border": false,
        "border_color": 255
      },
      "properties": {
        "display_mode": "text",
        "format": "%H:%M:%S",
        "update_interval": 0.1,
        "font_size": 16,
        "horizontal_align": "center",
        "vertical_align": "center",
        "padding": 2
      }
    }
  ]
}
