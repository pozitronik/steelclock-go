{
  "$schema": "../config.schema.json",
  "schema_version": 2,
  "game_name": "STEELCLOCK_CLOCK",
  "game_display_name": "SteelClock - Digital Clock",
  "refresh_rate_ms": 1000,
  "display": {
    "width": 128,
    "height": 40,
    "background": 0
  },
  "widgets": [
    {
      "type": "clock",
      "id": "digital_clock",
      "enabled": true,
      "position": {"x": 0, "y": 0, "w": 128, "h": 40, "z": 0},
      "style": {"background": 0, "border": -1, "padding": 2},
      "mode": "text",
      "text": {
        "format": "%H:%M:%S",
        "size": 16,
        "align": {"h": "center", "v": "center"}
      },
      "update_interval": 0.1
    }
  ]
}
