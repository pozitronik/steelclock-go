{
  "$schema": "../config.schema.json",
  "schema_version": 2,
  "game_name": "STEELCLOCK_VOLUME_METER",
  "game_display_name": "SteelClock - VU Meter",
  "refresh_rate_ms": 100,
  "display": {
    "width": 128,
    "height": 40,
    "background": 0
  },
  "widgets": [
    {
      "type": "volume_meter",
      "id": "vu_meter",
      "enabled": true,
      "position": {"x": 0, "y": 0, "w": 128, "h": 40, "z": 0},
      "style": {"background": 0, "border": true, "border_color": 255, "padding": 2},
      "mode": "bar",
      "bar": {
        "direction": "vertical",
        "border": false
      },
      "stereo": {
        "enabled": true,
        "left_color": 255,
        "right_color": 200
      },
      "metering": {
        "db_scale": false,
        "decay_rate": 2.0,
        "silence_threshold": 0.01
      },
      "peak": {
        "enabled": true,
        "hold_time": 1.0
      },
      "clipping": {
        "enabled": true,
        "threshold": 0.99,
        "color": 200
      },
      "text": {
        "align": {"h": "center", "v": "center"}
      },
      "auto_hide": {
        "on_silence": false
      },
      "update_interval": 0.05
    }
  ]
}
