{
  "$schema": "../config.schema.json",
  "refresh_rate_ms": 100,
  "display": {
    "width": 128,
    "height": 40,
    "background": 0
  },
  "widgets": [
    {
      "type": "volume_meter",
      "enabled": true,
      "position": {"x": 0, "y": 0, "w": 128, "h": 40, "z": 0},
      "style": {"background": 0, "border": 255, "padding": 0},
      "mode": "bar",
      "bar": {
        "direction": "vertical",
        "colors": {
          "fill": 255,
          "clipping": 200,
          "peak": 180
        }
      },
      "gauge": {
        "show_ticks": true,
        "colors": {
          "arc": 200,
          "needle": 255,
          "ticks": 150,
          "clipping": 200,
          "peak": 180
        }
      },
      "text": {
        "format": "%d%%",
        "font": null,
        "size": 10,
        "align": {"h": "center", "v": "center"}
      },
      "stereo": {
        "enabled": true,
        "divider": 64
      },
      "metering": {
        "db_scale": false,
        "decay_rate": 2.0,
        "silence_threshold": 0.01
      },
      "peak": {
        "enabled": true,
        "hold_time": 1.0
      },
      "clipping": {
        "enabled": true,
        "threshold": 0.99
      },
      "auto_hide": {
        "enabled": false,
        "timeout": 2.0,
        "on_silence": false,
        "silence_time": 2.0
      },
      "update_interval": 0.05,
      "poll_interval": 0.05
    }
  ]
}
