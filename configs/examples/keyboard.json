{
  "$schema": "../config.schema.json",
  "schema_version": 2,
  "game_name": "STEELCLOCK_KEYBOARD",
  "game_display_name": "SteelClock - Keyboard Indicators",
  "refresh_rate_ms": 200,
  "display": {
    "width": 128,
    "height": 40,
    "background": 0
  },
  "widgets": [
    {
      "type": "keyboard",
      "id": "keyboard_indicators",
      "enabled": true,
      "position": {"x": 0, "y": 0, "w": 128, "h": 40, "z": 0},
      "style": {"background": 0, "border": false, "padding": 2},
      "indicators": {
        "caps": {"on": "CAPS", "off": ""},
        "num": {"on": "NUM", "off": ""},
        "scroll": {"on": "SCR", "off": ""}
      },
      "layout": {
        "spacing": 3,
        "separator": " "
      },
      "colors": {
        "on": 255,
        "off": 100
      },
      "text": {
        "size": 10,
        "align": {"h": "center", "v": "center"}
      },
      "update_interval": 0.2
    }
  ]
}
